<Window x:Class="Torpedo_Project.homeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo_Project"
        mc:Ignorable="d"
        Title="HomePage" Height="400" Width="600">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <UserControl Loaded="keyPress_Click"/>
        <Label Content="Torpedó" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
            <Button x:Name="gameStart" Content="Játék!" Height="25" Width="70" Margin="10, 60, 10, 10"/>
            <ComboBox x:Name="shipCbx" Height="25" Width="70" Margin="10"/>
            <Button x:Name="exitBtn" Content="Kilépés" Height="25" Width="70" Margin="10" Click="exitBtn_Click"/>
        </StackPanel>


    </Grid>
</Window>
